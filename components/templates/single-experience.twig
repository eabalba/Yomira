{% extends 'base.twig' %}
{% set classList = 'post__intro item--featured' %}

{% set image = post.thumbnail %}
{% set image_src = image.src|resize(1600, 960) %}

{% block content %}
  <div class="post post--{{ post.post_type }}" id="post-{{ post.ID }}">
    <div class="post__hero">
      <div class="container">
        <div class="row">
          <div class="col-2">
            <div class="post__media">
              {% if image %}
                <img src="{{ image_src }}" />
              {% else %}
                {% include 'partial/placeholder.twig' %}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <article class="post__content">
      {{ post.content }}
      {% include 'partial/related.twig' with {
        page: post,
        title: 'Related Experiences'
      } %}
    </article>
  </div>
{% endblock %}
