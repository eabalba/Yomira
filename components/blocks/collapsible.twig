{% set content = fields.content %}
{% set heading = fields.heading %}

{% set classList = "block--collapsible collapsible collapsible--open" %}

{% if heading %}
  <section id="{{ id }}" class="{{ classList }}">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="collapsible__contents">
						<button class="collapsible__toggle">
							<h2>
								{{heading}}
							</h2>
						</button>
						<div class="collapsible__content">
							{{ content }}
						</div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}
